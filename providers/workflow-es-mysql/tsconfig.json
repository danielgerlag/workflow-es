{
    "compilerOptions": {
        "module": "commonjs",        
        "target": "ES2016",
        "outDir": "./build",
        "declaration": true,
        "noImplicitAny": false,
        "sourceMap": false,
        "pretty": true,
        "lib": [
            "es2017"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": false,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "spec/**/*.ts"
    ],
    "files": [
        "src/index.ts"   
    ]
}